#!/usr/bin/env bash

set -euf -o pipefail

HOST="i.jarv.org"
dir=$(dirname "$0")
file_dir="$dir/../files"
rsync_opts=(
  --checksum --itemize-changes
  --recursive --links --rsync-path="sudo rsync"
)

rsync "${rsync_opts[@]}" "$file_dir"/ $HOST:/
ssh $HOST 'sudo /var/opt/cmdchallenge/bin/bootstrap'
