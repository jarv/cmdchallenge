#!/usr/bin/env bash

set -euf -o pipefail

echo "Updating challenges ..."
dir=$(dirname "$0")
site_dir="${dir}/../site"
challenges_yaml="${dir}/../challenges.yaml"
challenges_json="$site_dir/challenges.json"

rm -f "$site_dir/challenges.json"

yq e -I0 -o=json "$challenges_yaml" > "$challenges_json"
