#!/usr/bin/env bash

set -euf -o pipefail

set -x

if [[ $1 == "testing" ]]; then
  img_suffix="-testing"
else
  img_suffix=""

fi

dir=$( cd -- "$(dirname "$0")" >/dev/null 2>&1 ; pwd -P )
cmdrunner_dir="$dir/../cmdrunner"
CI_REGISTRY_IMAGE="${CI_REGISTRY_IMAGE:-registry.gitlab.com/jarv/cmdchallenge}"


pushd "$cmdrunner_dir"
docker build --tag "$CI_REGISTRY_IMAGE/cmd${img_suffix}:latest" -f Dockerfile .
docker build --tag "$CI_REGISTRY_IMAGE/cmd-no-bin${img_suffix}:latest" -f Dockerfile-no-bin .
popd

docker push "$CI_REGISTRY_IMAGE/cmd${img_suffix}:latest"
docker push "$CI_REGISTRY_IMAGE/cmd-no-bin${img_suffix}:latest"


rm -f var.tar.gz
